@{
    ViewData["Title"] = "Contact";
}

<div class="row">
    <div class="col-lg-6 mb-5 mb-lg-0">
        <h1 class="display-4 mb-4">Contact Us</h1>
        <p class="lead mb-4">Get in touch with our team for inquiries, support, or feedback.</p>
        
        <form>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="name" required>
                </div>
                <div class="col-md-6">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="col-12">
                    <label for="subject" class="form-label">Subject</label>
                    <select class="form-select" id="subject" required>
                        <option value="" selected disabled>Select a subject</option>
                        <option value="Support">Technical Support</option>
                        <option value="Sales">Sales Inquiry</option>
                        <option value="Partnership">Partnership Opportunity</option>
                        <option value="Feedback">General Feedback</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col-12">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="5" required></textarea>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary px-4 py-2">Send Message</button>
                </div>
            </div>
        </form>
        
        <p class="text-muted small mt-4">We typically respond to inquiries within 24-48 hours during business days.</p>
    </div>
    
    <div class="col-lg-6">
        <div class="ps-lg-5">
            <div class="bg-light p-4 rounded-3 mb-4">
                <h3 class="mb-3">Contact Information</h3>
                
                <div class="d-flex mb-3">
                    <div class="me-3 text-primary">
                        <i class="bi bi-geo-alt-fill fs-5"></i>
                    </div>
                    <div>
                        <h5>Address</h5>
                        <p class="mb-0">123 Campus Drive<br>University District<br>Smartville, ST 12345</p>
                    </div>
                </div>
                
                <div class="d-flex mb-3">
                    <div class="me-3 text-primary">
                        <i class="bi bi-telephone-fill fs-5"></i>
                    </div>
                    <div>
                        <h5>Phone</h5>
                        <p class="mb-0">(123) 456-7890</p>
                    </div>
                </div>
                
                <div class="d-flex mb-3">
                    <div class="me-3 text-primary">
                        <i class="bi bi-envelope-fill fs-5"></i>
                    </div>
                    <div>
                        <h5>Email</h5>
                        <p class="mb-0">info@smartcampusportal.com</p>
                    </div>
                </div>
                
                <div class="d-flex">
                    <div class="me-3 text-primary">
                        <i class="bi bi-clock-fill fs-5"></i>
                    </div>
                    <div>
                        <h5>Business Hours</h5>
                        <p class="mb-0">Monday - Friday: 9:00 AM - 5:00 PM<br>Saturday & Sunday: Closed</p>
                    </div>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h3 class="mb-3">Connect With Us</h3>
                    <p>Follow us on social media for updates, tips, and educational content.</p>
                    
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-primary rounded-circle">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary rounded-circle">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary rounded-circle">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary rounded-circle">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-outline-primary rounded-circle">
                            <i class="bi bi-youtube"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 